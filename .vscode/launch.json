    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch pilot-agent",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "pilot/cmd/pilot-agent",
            "args": [
                "version"
            ]
        },
        {
            "name": "Launch pilot",
            "type": "go",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "pilot/cmd/pilot-discovery",
            "args": [
                "discovery",
                "--registries", "Consul", 
                "--configDir", "${workspaceFolder}/configDir", 
                "--httpAddr", ":18080",  
                "--secureGrpcAddr", "",
                "--ctrlz_address", "*",
                "--ctrlz_port", "9878", 
                "--log_output_level", "all:debug",
                "--log_caller", "all",
                "--log_target", "pilot.log",
            ]
        },
    ]
}